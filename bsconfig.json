{
  "name": "tailwind-starter",
  "reason": {
    "react-jsx": 3
  },
  "sources": {
    "dir": "src",
    "subdirs": true,
    "generators": [
      {
        "name": "gen-tailwind",
        "edge": ["tailwind.css", ":", "index.css"]
      }
    ]
  },
  "generators": [
    {
      "name": "gen-tailwind",
      "command": "tailwindcss build $in -o $out"
    }
  ],
  "bsc-flags": ["-bs-super-errors", "-bs-no-version-header"],
  "ppx-flags": [
    ["tailwind-ppx", "-path src/tailwind.css"]
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "suffix": ".bs.js",
  "bs-dependencies": ["@rescript/react"],
  "refmt": 3,
  "warnings": {
    "error": "+8"
  }
}
